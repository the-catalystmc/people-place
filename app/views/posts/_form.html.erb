<%= form_with model: post, url: new_post_path, method: :post, local: true, scope: :post do |f| %>
  <div>
  <%= f.label :title %>

  <%= f.text_field :title,
  size: "50x12",
placeholder: "Write your title here..."
  %>
</div>

<div>
  <%= f.label :Text %>

  <%= f.text_area :text,
size: "50x12",
placeholder: "Write your post here..."
  %>
</div>
<%= f.submit "Submit" %>
<% if @post.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

    <ul>
      <% @post.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<% end %>